<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <Button
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定位"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/btn_poiSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POI检索"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_location"/>
    <Button
        android:id="@+id/btn_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导航"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_poiSearch"/>
    <Button
        android:id="@+id/btn_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="覆盖"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_nav"/>
    <Button
        android:id="@+id/btn_routePlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规划"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_overlay"/>
</RelativeLayout>